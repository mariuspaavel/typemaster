CREATE TABLE accounts (
	accountid 
		SERIAL 
		PRIMARY KEY
		NOT NULL, 
	creationt 
		BIGINT 
		DEFAULT (extract(epoch from now()) * 1000)
		NOT NULL, 
	birth 
		BIGINT 
		not null, 
	contact 
		VARCHAR(50) 
		NOT NULL 
		UNIQUE,
	name 
		VARCHAR(20) 
		NOT NULL, 
	gender 
		VARCHAR(1) 
		NOT NULL, 
	bio
		VARCHAR(256)
		NOT NULL
		DEFAULT '',
	pwhash 
		VARCHAR(32) 
		NOT NULL,
	CHECK (birth >= -1577921940000),
	CHECK (gender = 'M' OR gender = 'F')
)
